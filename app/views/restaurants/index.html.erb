<h1>These are all the Restaurants</h1>

<ul class="index_list">
  <div class="container">
    <div class="row">
      <% @restaurants.each do |resto| %>
        <div class="col-xs-12 col-sm-4 col-md-3">
          <li id="test" class="resto_list">
            <h3> <%= link_to resto.name, restaurant_path(resto) %> </h3>
            <h5> We offer <b><%= resto.category %></b> food</h5>
            <p> This is where you can find us: <b><%= resto.address %></b></p>
            <p> Our phone number: <b><%= resto.phone_number %></b></p>
          </li>
        </div>
      <% end %>
    </div>
  </div>
</ul>

